// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  username  String   @unique
  password  String
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model NavigationItem {
  id        String           @id @default(cuid())
  label     String
  href      String
  parentId  String?
  order     Int              @default(0)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  parent    NavigationItem?  @relation("NavigationHierarchy", fields: [parentId], references: [id])
  children  NavigationItem[] @relation("NavigationHierarchy")
}

model SiteSettings {
  id                 String   @id @default(cuid())
  siteLogo           String
  siteTitle          String
  heroTitle          String
  heroSubtitle       String
  heroLogo           String
  downloadButtonText String
  downloadButtonUrl  String
  footerText         String
  socialDiscord      String?
  socialFacebook     String?
  socialTwitter      String?
  backgroundImage    String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model GameFeature {
  id        String   @id @default(cuid())
  text      String
  order     Int
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GameScreenshot {
  id          String   @id @default(cuid())
  image       String
  overlayText String
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model JobClass {
  id          String   @id @default(cuid())
  name        String
  icon        String
  description String
  category    String
  image       String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model JobCategory {
  id        String   @id @default(cuid())
  name      String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TeamInstance {
  id          String   @id @default(cuid())
  name        String
  icon        String
  description String
  category    String
  level       String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model TeamCategory {
  id        String   @id @default(cuid())
  name      String
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model HistoricalMoment {
  id          String   @id @default(cuid())
  title       String
  image       String
  description String
  date        String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model NewsPost {
  id          String    @id @default(cuid())
  title       String
  content     String
  excerpt     String?
  image       String?
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model MediaAsset {
  id           String   @id @default(cuid())
  filename     String
  originalName String
  mimeType     String
  size         Int
  url          String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
